<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AniLoom.Button.Base" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:strokeColor">?attr/colorSecondaryVariant</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AniLoom.Body</item>
    </style>

    <style name="Widget.AniLoom.Button.Primary" parent="Widget.AniLoom.Button.Base">
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="Widget.AniLoom.Button.Icon" parent="Widget.AniLoom.Button.Base">
        <item name="android:tint">?attr/colorOnPrimary</item>
        <item name="android:minWidth">15dp</item>
        <item name="android:minHeight">15dp</item>
        <item name="shapeAppearance">@style/CircleShape</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="CircleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.AniLoom.Button.TextH2" parent="Widget.AniLoom.Button.Base">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextAppearance.AniLoom.Heading2</item>
    </style>

    <style name="Widget.AniLoom.Button.TextH3" parent="Widget.AniLoom.Button.Base">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextAppearance.AniLoom.Heading3</item>
    </style>

</resources>
