<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".presentation.pages.search."
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ua.aniloom.presentation.common.views.CarouselMediaView
            android:id="@+id/vAnimeCarousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ua.aniloom.presentation.common.views.HorizontalList
            android:id="@+id/vAiringAnimeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp" />

        <ua.aniloom.presentation.common.views.TodayScheduleView
            android:id="@+id/vTodaySchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</ScrollView>