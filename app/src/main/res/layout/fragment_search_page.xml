<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".presentation.pages.search.SearchPageFragment"
    android:paddingHorizontal="16dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ua.aniloom.presentation.common.views.SearchFieldView
                android:id="@+id/vSearchField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="28dp"/>

                <include
                    android:id="@+id/vCharts"
                    layout="@layout/view_charts_buttons" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="28dp"/>

                <TextView
                    android:id="@+id/bOngoing"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/airing"
                    android:textSize="22sp"
                    android:textAppearance="@style/TextAppearance.AniLoom.W600"
                    android:textColor="?attr/colorOnPrimary" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOngoingList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"/>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="28dp"/>


                <TextView
                    android:id="@+id/bHistory"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history"
                    android:textSize="22sp"
                    android:textAppearance="@style/TextAppearance.AniLoom.W600"
                    android:textColor="?attr/colorOnPrimary" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHistoryList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>